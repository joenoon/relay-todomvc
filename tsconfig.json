{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": "./src",
    "rootDir": "./src",
    "jsx": "react",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "pretty": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "target": "es2015",
    "module": "es2015",    
    "lib": ["es7", "dom"]
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules"]
}